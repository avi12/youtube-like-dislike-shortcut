{
  "name": "youtube-like-dislike-shortcut",
  "version": "1.3",
  "description": "Like videos with Shift+Plus or Numpad Plus, dislike with Shift+Minus or Numpad Minus.",
  "repository": "https://github.com/avi12/youtube-like-dislike-shortcut",
  "license": "GPL-3.0-or-later",
  "author": "avi12 <avi6106@gmail.com>",
  "homepage": "https://avi12.com/youtube-like-dislike-shortcut",
  "bugs": {
    "email": "avi6106@gmail.com"
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "pack": "web-ext build --overwrite-dest --artifacts-dir dist_packed --source-dir dist --filename youtube-like-dislike-shortcut-{version}.zip",
    "pack-self": "zip-self -o dist_packed/youtube-like-dislike-shortcut-{version}-source.zip",
    "build-pack": "pnpm run build && pnpm run pack && pnpm run webext-incompat-fix && pnpm run pack-self",
    "build-for-firefox": "build-for-browser --i dist_packed/youtube-like-dislike-shortcut-{version}.zip --browser=firefox --source",
    "build-for-opera": "build-for-browser --i dist_packed/youtube-like-dislike-shortcut-{version}.zip --browser=opera --source",
    "webext-incompat-fix": "webext-store-incompat-fixer -i dist_packed/youtube-like-dislike-shortcut-{version}.zip -s chrome,edge,firefox,opera",
    "set-version": "set-json-version -f package.json dist/manifest.json -v",
    "run-browser": "web-ext run --no-config-discovery --start-url https://www.youtube.com/watch?v=dQw4w9WgXcQ --source-dir dist --verbose --target",
    "run-firefox": "pnpm run-browser firefox-desktop",
    "run-chromium": "pnpm run-browser chromium",
    "run-edge-windows": "\"\"%ProgramFiles(x86)%\\Microsoft\\Edge\\Application\\msedge.exe\"\" https://www.youtube.com/watch?v=dQw4w9WgXcQ --load-extension=%cd%\\dist"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/chrome": "^0.0.178",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "build-for-browser": "github:avi12/build-for-browser",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "rollup": "^2.67.3",
    "rollup-plugin-terser": "^7.0.2",
    "set-json-version": "^1.0.7",
    "typescript": "^4.5.5",
    "web-ext": "^6.7.0",
    "webext-store-incompat-fixer": "^0.1.40",
    "zip-self": "^0.4.5"
  }
}
