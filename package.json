{
  "name": "youtube-like-dislike-shortcut",
  "version": "2.4.1",
  "description": "Like videos with Shift+Plus or Numpad Plus, dislike with Shift+Minus or Numpad Minus.",
  "repository": "https://github.com/avi12/youtube-like-dislike-shortcut",
  "type": "module",
  "license": "GPL-3.0-or-later",
  "author": "Avi <avi6106@gmail.com>",
  "homepage": "https://avi12.com/youtube-like-dislike-shortcut",
  "scripts": {
    "dev": "wxt",
    "dev:rtl": "set VITE_LANG=he && wxt",
    "dev:edge": "pnpm dev -b edge",
    "dev:opera": "pnpm dev -b opera",
    "build": "wxt build --mode prod",
    "build:edge": "pnpm build -b edge",
    "build:opera": "pnpm build -b opera",
    "build:firefox": "pnpm build -b firefox --mv3",
    "package": "wxt zip --mode prod",
    "package:edge": "pnpm package -b edge",
    "package:opera": "pnpm package -b opera",
    "package:firefox": "pnpm package -b firefox --mv3",
    "build:package": "pnpm build && pnpm package",
    "build:package:edge": "pnpm build:edge && pnpm package:edge",
    "build:package:opera": "pnpm build:opera && pnpm package:opera",
    "build:package:firefox": "pnpm build:firefox && pnpm package:firefox",
    "build:package:all": "concurrently \"pnpm build:package\" \"pnpm build:package:edge\" \"pnpm build:package:opera\" \"pnpm build:package:firefox\" --names Chrome,Edge,Opera,Firefox",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@sveltejs/eslint-config": "^8.3.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/chrome": "^0.1.24",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@wxt-dev/module-svelte": "^2.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-config-avi12": "github:avi12/eslint-config-avi12",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-svelte": "^3.12.5",
    "globals": "^16.4.0",
    "postcss-html": "^1.8.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "svelte": "^5.42.2",
    "svelte-check": "^4.3.3",
    "svelte-eslint-parser": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "wxt": "^0.20.11"
  }
}
