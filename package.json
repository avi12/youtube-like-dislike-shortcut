{
  "name": "youtube-like-dislike-shortcut",
  "version": "2.4.1",
  "description": "Like videos with Shift+Plus or Numpad Plus, dislike with Shift+Minus or Numpad Minus.",
  "repository": "https://github.com/avi12/youtube-like-dislike-shortcut",
  "type": "module",
  "license": "GPL-3.0-or-later",
  "author": "Avi <avi6106@gmail.com>",
  "homepage": "https://avi12.com/youtube-like-dislike-shortcut",
  "scripts": {
    "dev": "wxt",
    "dev:rtl": "set VITE_LANG=he && wxt",
    "dev:edge": "bun run dev -b edge",
    "dev:opera": "bun run dev -b opera",
    "build": "wxt build --mode prod",
    "build:edge": "bun run build -b edge",
    "build:opera": "bun run build -b opera",
    "build:firefox": "bun run build -b firefox --mv3",
    "package": "wxt zip --mode prod",
    "package:edge": "bun run package -b edge",
    "package:opera": "bun run package -b opera",
    "package:firefox": "bun run package -b firefox --mv3",
    "build:package": "bun run build && bun run package",
    "build:package:edge": "bun run build:edge && bun run package:edge",
    "build:package:opera": "bun run build:opera && bun run package:opera",
    "build:package:firefox": "bun run build:firefox && bun run package:firefox",
    "build:package:all": "concurrently \"bun run build:package\" \"bun run build:package:edge\" \"bun run build:package:opera\" \"bun run build:package:firefox\" --names Chrome,Edge,Opera,Firefox",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@sveltejs/eslint-config": "^8.3.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/chrome": "^0.1.31",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@wxt-dev/module-svelte": "^2.0.4",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-avi12": "github:avi12/eslint-config-avi12",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-svelte": "^3.13.0",
    "globals": "^16.5.0",
    "postcss-html": "^1.8.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "svelte": "^5.45.2",
    "svelte-check": "^4.3.4",
    "svelte-eslint-parser": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "wxt": "^0.20.11"
  }
}
